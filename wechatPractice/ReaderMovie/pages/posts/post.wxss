swiper{
    height: 500rpx;
    width: 100%;
}

.swiper-image{
    height: 500rpx;
    width: 100%;
}

.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 10rpx;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
}

.author-container{
    margin-top: 20px;
    margin-bottom: 5px;
}
.post-author-image{
    width: 80rpx;
    height: 80rpx;
    margin-right: 8px;
}
.post-author{
    font-size: 32rpx;
    font-weight: bold;
    line-height: 40rpx;
}

.post-image{
    width: 100%;
    height: 400rpx;
}

.post-content{
    font-size: 30rpx;
    line-height: 30rpx;
    margin: 10rpx 5rpx 5rpx 5rpx;
}

.post-view{
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}
.view-image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 8rpx;
}
.view-number{
    font-size: 30rpx;
    line-height: 40rpx;
    color:#ededed;
    margin-right: 15rpx;
}
