swiper{
    height: 500rpx;
    width: 100%;
}

swiper image{
    height: 500rpx;
    width: 100%;
}

.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom:40rpx;
    background-color: #fff;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;
}

.author-container{
    margin: 10rpx 0 20rpx 10rpx;
}
.post-author-image{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    margin-right: 20rpx;
}
.post-author{
    font-size: 26rpx;
    font-weight: bold;
    vertical-align: middle;
    margin-bottom: 5px;
}

.post-title{
    font-size: 34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-image{
    width: 100%;
    height: 340rpx;
    margin-bottom: 15px;
}

.post-content{
    color: #666;
    font-size: 28rpx;
    margin: 0 0 20rpx 20rpx;
    line-height: 40rpx;
    letter-spacing: 2rpx;
}

.post-view{
    flex-direction: row;
    font-size: 13px;
    line-height: 16rpx;
    margin-left:10px;
}
.view-image{
    width: 16px;
    height: 16px;
    margin-right: 8px;
    vertical-align: middle;
}
.view-number{
    vertical-align: middle;
    margin-right: 20rpx;
}
