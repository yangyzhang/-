<template name="postItem">
        <view class="post-container">
            <view class="author-container">
                <image class="post-author-image" src="{{item.avatar}}"></image>
                <text class="post-author">{{item.date}}</text>
            </view>
            <text class="post-title">{{item.title}}</text>
            <image class="post-image" src="{{item.imgSrc}}"></image>
            <text class="post-content">{{item.content}}</text>
            <view class="post-view">
                <image class="view-image"src="/images/icon/view.png"></image>
                <text class="view-number">{{item.reading}}</text>
                <image class="view-image" src="/images/icon/chat.png"></image>
                <text class="view-number">{{item.collection}}</text>
            </view>
        </view>
</template>